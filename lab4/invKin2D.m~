function [theta]=invKin2D(l,theta0,pos,n, mode) 


if mode==0
    k=0;
    while k<n
        
       [pos0,J]=evalRobot2D(l,theta0);
       
      
      
        if an(norm(pos' -pos0) < [0.00005;0.00005]
            disp('now they are almost equal')
           break
        end
        
       
      
        f=fn(theta0,l,pos)
        
        s = J\-f
        theta0 = theta0 + s'
        
        k = k+1;
    end
    theta = theta0;

end 

if mode==1
    k=0;
    [pos0,B]=evalRobot2D(l,theta0);
    while k<n
      
        if abs(pos' -pos0) < [0.5*10^-6;0.5*10^-6]
            disp('now they are almost equal')
           break
        end
        
        
        fun=fn(theta0,l,pos);
        s = B\-fun;
        x = theta0 + s'
        y = fn(x,l,pos) - fn(theta0,l,pos);
        B = B + ((y - B*s)*s')/(s'*s);
        
        [pos0,J]=evalRobot2D(l,x);
        
        k = k+1;
        if k==n
            display(n,' iterations are done')
            break
        end
    end
    theta = x;
end
    

